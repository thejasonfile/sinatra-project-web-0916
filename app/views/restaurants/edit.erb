<h1>Edit a Restaurant</h1>

<form class="" action="/restaurants/<%= @restaurant.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
  <p>
    <label for="name">Name: </label>
    <input type="text" name="restaurant[name]" id="name" value="<%= @restaurant.name %>">
  </p>
  <p>
    <label for="rating">Rating: </label>
    <input type="text" name="restaurant[rating]" id="rating" value="<%= @restaurant.rating %>">
  </p>
  <p>
    <label for="address">Address: </label>
    <input type="text" name="restaurant[address]" id="address" value="<%= @restaurant.address %>">
  </p>
    <input type="submit" value="Submit">
</form>